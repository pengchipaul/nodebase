extends ../layouts/layout.pug 
block content
     div(class='container-fluid mt-5')
        div(class='row')
            div(class='col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-10 offset-sm-1')
                div(class='card')
                    div(class='card-header') Forget your password?
                    div(class='card-body')
                        form(method='post' action='/auth/send_reset_link' )
                            input(type='hidden' name='_csrf' value=csrfToken)
                            div(class='form-group')
                                label(for='email') Email
                                input(type='email' class='form-control' name='email')
                            button(type='submit' class='btn btn-primary') Send Reset Link