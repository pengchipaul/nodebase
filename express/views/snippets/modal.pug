mixin modal(id='modal', title='modal', size='medium')
    .modal.fade(id=id, tabindex='-1' role='dialog' aria-hidden='true')
        div(class=(size === 'large' ? 'modal-dialog modal-lg' : size === 'small' ? 'modal-dialog modal-sm' : 'modal-dialog'), role='document')
            .modal-content
                .modal-header
                    h5.modal-title= title
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    block

        
    